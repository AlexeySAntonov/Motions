<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <Button
      android:id="@+id/firstScene"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Scene 1"
      app:layout_constraintBottom_toTopOf="@+id/secondScene"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>
  <Button
      android:id="@+id/secondScene"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Scene 2"
      app:layout_constraintBottom_toTopOf="@+id/thirdScene"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/firstScene"/>
  <Button
      android:id="@+id/thirdScene"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Scene 3"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/secondScene"/>
</android.support.constraint.ConstraintLayout>